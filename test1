        let currentStoryId = "start";
        const storyTextElement = document.getElementById("story-text");
        const choicesContainerElement = document.getElementById("choices-container");

        function findStoryById(id) {
            return storyData.find(story => story.id === id);
        }

        function renderStory(storyId) {
            const story = findStoryById(storyId);

            if (!story) {
                storyTextElement.innerHTML = `<p class="text-brown-dark">故事在這裡結束了，感謝您的閱讀。</p>`;
                choicesContainerElement.innerHTML = '';
                return;
            }

            // Update story text with a subtle fade effect
            storyTextElement.style.opacity = '0';
            setTimeout(() => {
                storyTextElement.innerHTML = `<p class="whitespace-pre-wrap">${story.paragraph}</p>`;
                storyTextElement.style.opacity = '1';
            }, 300); // Match CSS transition duration

            // Clear previous choices
            choicesContainerElement.innerHTML = '';

            // Add new choice buttons
            if (story.choices && story.choices.length > 0) {
                story.choices.forEach(choice => {
                    const button = document.createElement("button");
                    button.textContent = choice.text;
                    button.onclick = () => makeChoice(choice.next);
                    button.className = "flex-grow px-6 py-3 rounded-full font-display font-semibold text-lg sm:text-xl text-brown-dark bg-coffee-light hover:bg-coffee-darker hover:text-cream-lighter transition-all duration-300 ease-in-out shadow-md hover:shadow-xl focus:outline-none focus:ring-4 focus:ring-accent-dusty-rose focus:ring-opacity-75 whitespace-normal break-words";
                    choicesContainerElement.appendChild(button);
                });
            } else {
                // If no choices, display an ending message
                const endMessage = document.createElement("p");
                endMessage.textContent = "故事在此告一段落。";
                endMessage.className = "text-brown-dark text-xl sm:text-2xl font-display font-medium text-center py-4";
                choicesContainerElement.appendChild(endMessage);
            }

            // Scroll to top of the story container on new content
            storyTextElement.scrollIntoView({ behavior: 'smooth', block: 'start' });
        }

        function makeChoice(nextStoryId) {
            currentStoryId = nextStoryId;
            renderStory(currentStoryId);
        }

        // Initial render on page load
        document.addEventListener("DOMContentLoaded", () => {
            renderStory(currentStoryId);
        });
    </script>
</body>
</html>
